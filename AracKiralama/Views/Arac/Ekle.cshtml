
@{
    ViewBag.Title = "Ekle";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Araç Bilgileri
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">

                        <form role="form" method="post">
                            <div class="form-group">
                                <label>Plaka No</label>
                                <input class="form-control" name="PlakaNo">
                            </div>

                            <div class="form-group">
                                <label>Marka</label>
                                <input class="form-control" name="MarkaIsim">
                            </div>

                            <div class="form-group">
                                <label>Model</label>
                                <input class="form-control" name="ModelIsim">
                            </div>

                            <div class="form-group">
                                <label>Yaş</label>
                                <input class="form-control" name="Yas">
                            </div>

                            <div class="form-group">
                                <label>Araç Tipi</label>
                                <select class="form-control" name="Tip">
                                    <option>@AracKiralama.Models.AracTip.Otomobil</option>
                                    <option>@AracKiralama.Models.AracTip.Motosiklet</option>
                                    <option>@AracKiralama.Models.AracTip.Ticari</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label>Günlük Ücret</label>
                                <input class="form-control" name="GunlukUcret">
                            </div>
                            <button type="submit" class="btn btn-default">Kaydet</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

